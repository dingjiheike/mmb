@import 'normalize6.0.scss';
@import '../lib/swiper/swiper.min.scss';
@import 'base.scss';
@import 'media.scss';
@import "baicaijia.scss";
//自定义
//头部区域
#header {
    height: 50px;
    background: #ff841d;
    border-bottom: 1px solid #e6e6e6;
    position: relative;
    >.logo {
        padding: 12px;
        margin-left: 5px;
        >a {
            >img {
                max-height: 25px;
                overflow: hidden;
            }
        }
    }
    >.appDown {
        position: absolute;
        right: 0px;
        top: 0;
        padding: 7px;
        >a {
            >img {
                max-height: 34px;
                overflow: hidden;
            }
        }
    }
}

//搜索栏
#form-search {
    padding: 10px;
    background-color: #fff;
    >.search {
        position: relative;
        padding-right: 70px;
        >input[type="search"] {
            width: 100%;
            -webkit-appearance: none;
            border: none;
            background: #f1f1f1;
            height: 30px;
            line-height: 30px;
            border-radius: 15px;
            font-size: 13px;
            padding-right: 50px;
            padding-left: 20px;
        }
        >input[type="button"] {
            position: absolute;
            -webkit-appearance: none;
            width: 63px;
            background: #ff841d;
            color: #FFFFFF;
            border: none;
            height: 30px;
            line-height: 30px;
            border-radius: 15px;
            top: 0px;
            right: 0px;
            font-size: 16px;
        }
    }
}

//底部
#foot{
    width: 100%;
    position: absolute;
    bottom: 0;
}
.footer {
    background: #efefef;
    text-align: center;
    font-size: 12px;
    padding: 15px 0;
    color: #666;
    p {
        &:nth-child(1){
            margin-bottom: 3px;
        }
        a:nth-child(2) {
            color: #000;
        }
    }
}

.foot_top {
    background: #efefef;
    border-top: 1px solid #c4c4c4;
    border-bottom: 1px solid #c4c4c4;
    height: 34px;
    line-height: 34px;
    margin-top: 25px;
    clear: both;
    a {
        color: #000;
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        -o-box-sizing: border-box;
        box-sizing: border-box;
        float: left;
        font-size: 14px;
        border-right: 1px solid #c4c4c4;
        text-align: center;
        line-height: 34px;
        width: 30%;
        img {
            vertical-align: middle;
            color: #666;
            margin-top: -5px;
            margin-right: 2px;
        }
    }
}
